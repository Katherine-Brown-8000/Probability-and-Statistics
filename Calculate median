data_set = [1, 2, 3]

mean = sum(data_set)/ len(data_set)

def median(data_set):
    sds = sorted(data_set)
    lds = len(sds)

    if lds % 2 == 1:
        median = sds[lds// 2]
    else:
        mid_1 = sds[lds// 2 - 1]
        mid_2 = sds[lds//2]
        median = (mid_1 + mid_2)
    return median

median_value = median(data_set)


print(f"The mean is {mean}")
print(f"The median is {median_value}")
